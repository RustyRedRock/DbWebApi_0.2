@using DB_Server_WebApi.Models
@using Toolbelt.Blazor.I18nText
@using System.Globalization
@inject I18nText I18nText
@inject NavigationManager NavigationManager


<div class="top-bar">
    <div class="top-bar-left"></div>
    <div class="top-bar-center">
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" style="width: 120px;">
                @T?.TopBar_Button1
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">@T?.TopBar_Option1</a></li>
                <li><a class="dropdown-item" href="#">@T?.TopBar_Option2</a></li>
            </ul>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" style="width: 120px;">
                @T?.TopBar_Button2
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">@T?.TopBar_Option1</a></li>
                <li><a class="dropdown-item" href="#">@T?.TopBar_Option2</a></li>
            </ul>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" style="width: 120px;">
                @T?.TopBar_Button3
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">@T?.TopBar_Option1</a></li>
                <li><a class="dropdown-item" href="#">@T?.TopBar_Option2</a></li>
            </ul>
        </div>

        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" style="width: 120px;">
                @T?.TopBar_Button4
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" @onclick="@(() => ChangeLanguage("en-US"))">English</a></li>
                <li><a class="dropdown-item" href="#" @onclick="@(() => ChangeLanguage(" fr-FR"))">Français</a></li>
            </ul>
        </div>
    </div>
    <div class="top-bar-right"></div>
</div>

